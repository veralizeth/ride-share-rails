
<% if @passengers.length > 0%>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody>
    <% @passengers.each do |passenger|%>
      <tr>
        <%# <th scope="row"></th> %>
        <td><%= passenger.id %></td>
        <td><%= link_to passenger.name, passenger_path(passenger) %></td>
        <td><%= passenger.phone_num %></td>
      </tr>
    </tbody>
    <%end %>
</table>

<%else%>
  <h3> No Passengers </h3>
<%end%>