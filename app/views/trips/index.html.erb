
<% if @trips.length > 0%>
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Driver's Name</th>
        <th>passenger's Name</th>
        <th>Trip cost</th>
        <th>Trip rating</th>
      </tr>
    </thead>
    <tbody>
    <% @trips.each do |trip|%>
      <tr>
        <%# <th scope="row"></th> %>
        <td><%= trip.id %></td>
        <td><%= trip.driver&.name || "Deleted" %></td>
        <td><%= trip.passenger&.name || "Deleted" %></td>
        <td><%= trip.cost %></td>
        <td><%= trip.rating %></td>
      </tr>
    </tbody>
    <%end %>
</table>
<%else%>
  <h3> No Trips! </h3>
<%end%>